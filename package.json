{
  "name": "c2mon-web-ui",
  "description": "C2MON web interface",
  "author": "Justin Lewis Salmon <justin.lewis.salmon@cern.ch>",
  "repository": {
    "type": "git",
    "url": "ssh://git@gitlab.cern.ch:7999/c2mon/c2mon-web-ui.git"
  },
  "scripts": {
    "preinstall": "npm set progress=false",
    "copy": "cpx \"node_modules/**/*.{css,scss,eot,ttf,woff,woff2}\" target/classes/static/lib",
    "build": "npm run copy -s && npm run build:js -s && npm run build:css -s && npm run build:html -s",
    "build:js": "webpack --config src/main/frontend/config/webpack-prod.js --NODE_ENV=production",
    "build:css": "node-sass src/main/frontend/app/main.scss --output-style compressed -o target/classes/static/bin",
    "build:html": "cpx \"src/main/frontend/app/**/*.html\" target/classes/static",
    "watch": "typings install && npm run build:css -s && concurrently \"npm run watch:js\" \"npm run watch:css\" \"npm run watch:html\"",
    "watch:js": "webpack --watch --config src/main/frontend/config/webpack-dev.js --NODE_ENV=dev --display-error-details",
    "watch:css": "node-sass src/main/frontend/app/main.scss --watch -o target/classes/static/bin",
    "watch:html": "cpx -w \"src/main/frontend/app/**/*.html\" target/classes/static",
    "lint": "npm run lint:ts -s && npm run lint:scss -s",
    "lint:ts": "tslint \"src/main/frontend/app/**/*.ts\"",
    "lint:scss": "sass-lint -v \"src/main/frontend/app/**/*.scss\"",
    "test": "karma start --NODE_ENV=test"
  },
  "dependencies": {
    "angular": "1.5.*",
    "angular-ui-bootstrap": "^2.0.0",
    "angular-ui-router": "1.0.0-beta.1",
    "bootstrap-sass": "^3.3.7",
    "font-awesome": "4.6.*",
    "jquery": "^3.1.0",
    "lodash": "4.13.*",
    "moment": "^2.14.1"
  },
  "devDependencies": {
    "concurrently": "2.2.*",
    "cpx": "1.3.*",
    "jasmine-reporters": "2.2.*",
    "karma": "1.1.*",
    "karma-chrome-launcher": "1.0.*",
    "karma-coverage": "1.1.*",
    "karma-jasmine": "1.0.*",
    "karma-phantomjs-launcher": "1.0.*",
    "node-sass": "3.8.*",
    "phantomjs-polyfill": "0.0.2",
    "phantomjs-prebuilt": "2.1.*",
    "protractor": "4.0.*",
    "sass-lint": "1.8.*",
    "ts-loader": "0.8.*",
    "tslint": "3.13.*",
    "typescript": "1.8.*",
    "typings": "1.3.*",
    "url-loader": "^0.5.7",
    "webpack": "1.13.*"
  }
}
